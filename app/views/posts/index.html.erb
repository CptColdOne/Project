<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<p><table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Caption</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td style='width:400px; height:auto'><%= image_tag(post.image, style:'width:100%') %></td>
        <td><%= post.caption %></td>
        <td><%= post.total_views %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></p>

<br>

<%= link_to 'New Post', new_post_path %>
<%= link_to "Back", root_path %>
