<%= react_component("Home/home", {name: current_user.username, email: current_user.email, telephone: current_user.telephone})%>
<!-- <div >Здравствуйте, <%= current_user.username %>!</div> -->
<p><table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Caption</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td style='width:400px; height:auto'><%= image_tag(post.image, style:'width:100%') %></td>
        <td><%= post.caption %></td>
        <td><%= post.total_views %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></p>
<!-- <%= link_to 'Посмотреть посты', posts_path %> -->
<%= link_to 'Новый пост', new_post_path %>
<p><%= link_to "Изменить регистрационные данные", edit_user_registration_path %></p>
<p><%= link_to 'Выйти', destroy_user_session_path, :method => :delete %></p>
